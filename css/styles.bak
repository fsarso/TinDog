body {
  font-family: "Montserrat";
}

#title {
  background-color: #ff4c68;
  color: #fff;
  font-weight: bold;
}

  .container-fluid {
    padding: 3% 15% 7%; /* 3 top  15 left right  7 bottom */
  }

h1 {
    font-family: "Montserrat", sans-serif;
     font-size: 3.5rem;
    /* font-family: 'Montserrat', sans-serif; font-size: 3rem;  */
    line-height: 1.5;
    font-weight: 900; /* Montserrat Black */
  }

  h2 {
    font-family: "Montserrat";
    font-weight: 900;
    font-size: 3rem;
    line-height: 1.5;
    /* color: white; */
  }

  h3 {
    font-family: "Montserrat";
    font-weight: 900;
    font-size: 1.5rem;
  }

p {
  color: #8f8f8f;
}
  /* Navigation Bar */
  .navbar {
    padding: 0 0 4.5rem; /*0 top 0leftright 4.5rem bottom only */
  }

  .navbar-brand {
    font-family: "Ubuntu";
    font-size: 2.5rem;
    font-weight: bold;
  }

  .nav-item {
    padding: 0 18px; /* 0 topbottom 18px leftright*/
  }

  .nav-link {
    font-size: 1.2rem;
    font-family: "Montserrat";
    font-weight: 300;  /* Montserrat Light */
  }

   /* Download Buttons */
   .download-button {
     margin: 5% 3% 5% 0;
   }

   /* title image */
   .title-image {
     width: auto;
     transform: rotate(25deg);
       position: absolute;
       right: 20%;
       /* bottom: 5px; */
       top: 20%;
 /* z-index: -1; */
   }

 /* features section */

 #features {
   padding: 7% 15%; /* 7topbottom 15 leftright */
   background-color: #fff;
 position: relative;
   /* z-index: 1; */
 }

.feature-box {
  text-align: center;
  padding: 5%;

}

.icon {
  color: #ef8172;
  margin-bottom: 1rem;
}

.icon:hover {
  color: #ff4c68;
}

/* testimonial section */

#testimonials {
  text-align: center;
  background-color: #ef8172;
  color: #fff;
}

.testimonial-image {
   width: 10%;
   border-radius: 100%;
   margin: 20px;
}

#press {
  background-color: #ef8172;
  text-align: center;
  padding-bottom: 3%;
}

.press-logo {
  width: 15%;
  margin: 50px 20px 20px; /* 20top 20leftright 50bottom */
}

.carousel-item {
  height: 500px;
  padding: 7% 15%;
}

/* Pricing section */
#pricing {
  padding: 100px;
  text-align: center;
}

.pricing-column {
  padding: 3% 2%;
}


/* CTA section */

#cta {
  background-color: #ff4c68;
  color: #fff;
  padding: 7% 15%; /* 7topbottom 15 leftright */
  text-align: center;
}

.cta-heading {
  font-family: "Montserrat";
  font-weight: 900;
  font-size: 3.5rem;
  line-height: 1.5;
}


/* Footer section */
#footer {
  padding: 7% 15%;
  text-align: center;
}

.social-icon {
  margin: 20px 10px;
}



/* Media used for responsiveness , ie tablet, phone, etc */

@media (max-width: 1028px) {

  #title {
    text-align: center;
  }

  .title-image {
    position: static;
    transform: rotate(0);
  }
}
